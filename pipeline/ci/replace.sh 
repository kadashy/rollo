#!/bin/bash

sed -i "s/{VERSION}/"${VERSION}"/g" "${CI_PROJECT_DIR}"/pipeline/cd/job.yml
sed -i "s/{CI_PROJECT_NAME}/"${CI_PROJECT_NAME}"/g" "${CI_PROJECT_DIR}"/pipeline/cd/job.yml
sed -i "s/{EXTENV}/"${EXTENV}"/g" "${CI_PROJECT_DIR}"/pipeline/cd/job.yml
sed -i "s/{APPNAME}/"${APPNAME}"/g" "${CI_PROJECT_DIR}"/pipeline/cd/job.yml
sed -i "s/{VARENV}/"${VARENV}"/g" "${CI_PROJECT_DIR}"/pipeline/cd/job.yml
sed -i "s/{ENVIRONMENT}/"${ENVIRONMENT}"/g" "${CI_PROJECT_DIR}"/pipeline/cd/job.yml
sed -i "s/{PROJECTID}/"${PROJECTID}"/g" "${CI_PROJECT_DIR}"/pipeline/cd/job.yml
